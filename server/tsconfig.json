{
    "compilerOptions": {
        "outDir": "./dist/",        // path to output directory
        "lib": ["es5", "es6", "dom"],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "noImplicitAny": false
    },
    "include": [
        "./src/"
    ]
}